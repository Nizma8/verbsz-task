---
import { Image } from "astro:assets";
import icon1 from "../Images/Banner/call.png";
import icon2 from "../Images/Banner/email.png";
import icon3 from "../Images/Banner/location.png";

const data = [
 {image:icon1,
 title:"contact number",
 enquiry:"Enquiry:21212122121",
 appoin:"Appointment:+6333333"
},
{image:icon2,
 title:"contact number",
 enquiry:"Enquiry:21212122121",
 appoin:"Appointment:+6333333"
},
{image:icon3,
 title:"contact number",
 enquiry:"Enquiry:21212122121",
 appoin:"Appointment:+6333333"
}
 

]
---

<div class="lg:px-48 flex mt-80 py-6 w-full lg:flex-row flex-col px-2 mx-auto items-center">
    <div class="shadow-lg rounded-lg px-10 py-11 space-y-5">
       <h2 class="text-center text-4xl">Free Consultaion</h2>
       <p class="text-center">Lorem Ipsum is simply dummy text of the printing and typesetting industry</p>
       <form class="max-w-lg mx-auto">
        <!-- Full Name and Phone Number on Same Line -->
        <div class="flex space-x-4 mb-4 ">
          <div class="w-1/2">
            <input type="text" placeholder="Full Name" class="w-full border rounded-lg px-3 py-2">
          </div>
          <div class="w-1/2">
            <input type="tel" placeholder="Phone" class="w-full border rounded-lg px-3 py-2">
          </div>
        </div>
    
        <!-- Email -->
        <div class="mb-4">
          <input type="email" placeholder="Email" class="w-full border rounded-lg px-3 py-2">
        </div>
    
        <!-- Company Name -->
        <div class="mb-4">
          <input type="text" placeholder="Company Name" class="w-full border rounded-lg px-3 py-2">
        </div>
    
        <!-- Message -->
        <div class="mb-4">
          <textarea placeholder="Message" rows="4" class="w-full border rounded-lg px-3 py-2"></textarea>
        </div>
    
        <!-- Submit Button -->
        <div class="text-center">
          <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded">Submit</button>
        </div>
      </form>
    </div>
<div class="py-24 w-[50%] flex justify-center flex-col space-y-5">
    <h2 class="text-2xl text-center">Don't like filling up form ?</h2>
        <div class="flex flex-col">
            {
                data.map(item=>{
                    return (
                        <div class="flex items-center justify-center space-x-6 mb-5">
     <div>
         
          <Image src={item.image} alt={item.title}/>
        </div>
        
        
        <div>
          <h3 class="text-lg font-semibold mb-2">{item.title}</h3>
          <p>{item.enquiry}</p>
          <p>{item.appoin}</p>
          
        </div>
                        </div>
                    )
                })
            }
        </div>
</div>
</div>